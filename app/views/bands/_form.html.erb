<% action_url = @band.persisted? ? band_url(@band) : bands_url %>
<% method = @band.persisted? ? "<input type='hidden' name='_method' value='PATCH' />".html_safe : '' %>
<% submit_button = @band.persisted? ? 'Update band' : 'Create band' %>

<form action="<%= action_url %>" method="post">
  <%= method %>
  <%= auth_token %>
  <label for="band_name">Name: </label>
  <input type="text" name="band[name]" id="band_name" autofocus value="<%= @band.name %>" />

  <input type="submit" value="<%= submit_button %>" />
</form>
